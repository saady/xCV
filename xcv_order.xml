<?xml version="1.0" encoding="UTF-8"?>

<xcv:order xmlns:xcv="http://dje.josuah.aron/09/05/1983/xcv"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://dje.josuah.aron/09/05/1983/xcv #schema">

  <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	     targetNamespace="http://dje.josuah.aron/09/05/1983/xcv"
	     xmlns="http://dje.josuah.aron/09/05/1983/xcv"
	     elementFormDefault="qualified"
	     id="schema">
    <!-- **************** De la documentation ***************** -->
    <xs:annotation>
      <!-- Pour les humains -->
      <xs:documentation>
	<p>Petit schéma embarqué, pour définir les éléments du dialecte permettant de décrire l'ordonnancement des sections dans un document xCV.</p>
	<p>Les sections apparaîtront tout simplement dans l'ordre où elles sont cités dans les éléments "position"</p>
      </xs:documentation>

      <!-- Pour les machines: Dublin core -->
      <xs:appinfo xmlns:dc="http://purl.org/dc/elements/1.1/">
	<dc:creator>Josuah Aron (mailto:josuah.aron@gmail.com)</dc:creator>
	<dc:date>2014-02-14</dc:date>
	<dc:subject>XML,cv,curriculum,vitea,dialect,order,ordering</dc:subject>
	<dc:description>
	  Ce petit schéma embarqué permet de définir les éléments d'un dialecte pour décrire l'ordonnancement des sections dans un document xCV.
	</dc:description>
      </xs:appinfo>
    </xs:annotation>

    <!-- ***************** Spécification des éléments ***************** -->
    <xs:element name="order">
      <xs:complexType>
	<xs:sequence>

	  <xs:element name="position">
	    <xs:complexType>
	      <xs:extension base="xs:anyType">
		<xs:attribute name="section" use="required"/>
	      </xs:extension>
	    </xs:complexType>
	  </xs:element>

	</xs:sequence>
      </xs:complexType>
    </xs:element>
  </xs:schema>

  <!--Les sections apparaîtront tout simplement dans l'ordre où elles sont cités dans les éléments "position"-->

  <xcv:position section="education"/>

  <xcv:position section="certificates"/>

  <xcv:position section="experience"/>

  <xcv:position section="jobs"/>

  <xcv:position section="realizations"/>

  <xcv:position section="projects"/>

  <xcv:position section="expert skills"/>

  <xcv:position section="other skills"/>

  <xcv:position section="languages"/>

  <xcv:position section="interests"/>

  <xcv:position section="publications"/>

  <xcv:position section="conferences"/>

  <xcv:position section="honors"/>

</xcv:order>